# =============================================================================
# CHATTEN ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# NEO N3 BLOCKCHAIN CONFIGURATION
# -----------------------------------------------------------------------------

# Your Neo N3 private key (WIF format)
NEO_PRIVATE_KEY=your_private_key_here

# Neo N3 wallet address
NEO_WALLET_ADDRESS=your_neo_address_here

# Neo N3 RPC node URL
# MainNet: https://mainnet1.neo.coz.io:443
# TestNet: https://testnet1.neo.coz.io:443
NEO_RPC_URL=https://testnet1.neo.coz.io:443

# Network magic number (MainNet: 860833102, TestNet: 894710606)
NEO_NETWORK_MAGIC=894710606

# Path to NEP-6 wallet file (optional)
NEO_WALLET_PATH=./wallet.json
NEO_WALLET_PASSWORD=your_wallet_password

# -----------------------------------------------------------------------------
# CHATTEN CONTRACT CONFIGURATION
# -----------------------------------------------------------------------------

# Deployed Chatten Token contract hash (after deployment)
CHATTEN_CONTRACT_HASH=0x0000000000000000000000000000000000000000

# Contract owner address
CHATTEN_OWNER_ADDRESS=your_owner_address

# -----------------------------------------------------------------------------
# SPOONOS AGENT FRAMEWORK
# -----------------------------------------------------------------------------

# SpoonOS API key (from https://spoonos.ai)
SPOON_API_KEY=your_spoon_api_key_here

# SpoonOS workspace ID
SPOON_WORKSPACE_ID=your_workspace_id

# Agent configuration
SPOON_AGENT_NAME=ChattenTrader

# -----------------------------------------------------------------------------
# OPENAI CONFIGURATION
# -----------------------------------------------------------------------------

# OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Model to use for agent reasoning
OPENAI_MODEL=gpt-4-turbo-preview

# Temperature for agent responses (0.0-2.0)
OPENAI_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false

# Enable dry-run mode (simulate transactions)
DRY_RUN=false
